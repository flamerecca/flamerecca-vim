"第一行必須設置這個才會正常生效
set nocompatible

" 設置 vundle {
    filetype off
    set rtp+=~/.vim/bundle/Vundle.vim
    call vundle#begin()
" }

" 設置套件 {
    Plugin 'VundleVim/Vundle.vim'             "預設必須
    Plugin 'flazz/vim-colorschemes'           "顏色配置
    Plugin 'godlygeek/tabular'                "排版
    Plugin 'terryma/vim-multiple-cursors'     "多游標
    Plugin 'vim-airline/vim-airline'          "下方指示列套件
    Plugin 'vim-airline/vim-airline-themes'   "下方指示列外觀設置
" }
call vundle#end()
